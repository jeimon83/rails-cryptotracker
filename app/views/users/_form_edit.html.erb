<form>
  <%= form_with(model: user, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :firstname, 'First Name: ' %>
      <%= form.text_field :firstname, class: 'form-control', required: true, value: current_user.firstname %>
    </div>
    <div class="form-group">
      <%= form.label :lastname, "Last Name: " %>
      <%= form.text_field :lastname, class: 'form-control', required: true, value: current_user.lastname  %>
    </div>
    <div class="form-group">
      <%= form.label :wallet, "Wallet Name: " %>
      <%= form.text_field :wallet_name, class: 'form-control', required: true, value: current_user.wallet&.name  %>
    </div>
    <div class="form-group">
      <%= form.label :address, "Wallet Address: " %>
      <%= form.text_field :wallet_address, class: 'form-control', required: true, value: current_user.wallet&.address  %>
    </div>
    <div class="form-group">
      <%= form.label :exchange, "Exchange Name: " %>
      <%= form.text_field :exchange_name, class: 'form-control', required: true, value: current_user.exchange&.name  %>
    </div>
    <div class="form-group">
      <%= form.label :api_key, "Exchange Api Key: " %>
      <%= form.text_field :exchange_api_key, class: 'form-control', required: true, value: current_user.exchange&.api_key  %>
    </div>
    <div class="form-group">
      <%= form.label :secret_key, "Exchange Secret Key: " %>
      <%= form.text_field :exchange_secret_key, class: 'form-control', required: true, value: current_user.exchange&.secret_key  %>
    </div>
    
    <div class='actions' style='margin-top: 10px;'>
      <%= form.submit 'Save', class: "btn btn-primary" %>
    </div>
    
  <% end %>
</form>